generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model RegisterPaymentRequest {
  id                 String   @id @default(ulid())
  product_id         String   @db.VarChar(255)
  user_id            String   @db.VarChar(255)
  price              Float    @db.Float
  quantity           Int      @db.Int
  card_number        String   @db.VarChar(255)
  card_exp_month     String   @db.VarChar(255)
  card_exp_year      String   @db.VarChar(255)
  card_security_code String   @db.VarChar(255)
  status             Int      @db.Int
  updatedAt          DateTime @updatedAt
  createdAt          DateTime @default(now())

  @@map("register_payment_request")
}

model Product {
  id        String   @id
  name      String   @db.VarChar(255)
  price     Float    @db.Float
  quantity  Int      @db.Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("product")
}

model AntiDuplication {
  id_transacao String   @id
  user_id      String
  process      Boolean
  createdAt    DateTime @default(now())

  @@map("anti_duplication")
}
